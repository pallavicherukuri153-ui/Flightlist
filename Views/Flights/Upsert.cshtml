@model FlightsList.Models.Flight
@{
    bool isEdit = Model.FlightId != 0;
    ViewData["Title"] = isEdit ? "Edit Flight" : "Add Flight";
}

<h2>@ViewData["Title"]</h2>

<form method="post" class="mt-3"
      asp-controller="Flights"
      asp-action="@(isEdit ? "Edit" : "Upsert")"
      asp-route-id="@(isEdit ? Model.FlightId : null)">

    @Html.AntiForgeryToken()

    <div asp-validation-summary="All" class="text-danger mb-2"></div>

    @if (!isEdit)
    {
        <div class="mb-3">
            <label asp-for="FlightNumber" class="form-label"></label>
            <input asp-for="FlightNumber" class="form-control" />
            <span asp-validation-for="FlightNumber" class="text-danger"></span>
        </div>
    }
    else
    {
        <div class="mb-3">
            <label asp-for="FlightNumber" class="form-label"></label>
            <input asp-for="FlightNumber" class="form-control" readonly />
            <span class="form-text">Flight Number cannot be changed.</span>
        </div>
    }

    <div class="mb-3">
        <label asp-for="From" class="form-label"></label>
        <select asp-for="From" class="form-select" asp-items="ViewBag.FromCities">
            <option value="">-- Select From --</option>
        </select>
        <span asp-validation-for="From" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="To" class="form-label"></label>
        <select asp-for="To" class="form-select" asp-items="ViewBag.ToCities">
            <option value="">-- Select To --</option>
        </select>
        <span asp-validation-for="To" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Date" class="form-label"></label>
        <input asp-for="Date" class="form-control" />
        <span asp-validation-for="Date" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Price" class="form-label"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Save</button>
    <a asp-controller="Flights" asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
</form>
