@model IEnumerable<FlightsList.Models.Flight>
@{
    ViewData["Title"] = "Flights";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0">Flights</h2>
    <a asp-controller="Flights" asp-action="Upsert" class="btn btn-primary">Add a Flight</a>
</div>

<div class="table-responsive">
    <table class="table table-striped align-middle">
        <thead>
            <tr>
                <th>Flight Number</th>
                <th>From</th>
                <th>To</th>
                <th>Date</th>
                <th class="text-end">Price</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.FlightNumber</td>
                <td>@item.From</td>
                <td>@item.To</td>
                <td>@item.Date.ToString("M/d/yyyy")</td>
                <td class="text-end">@item.Price.ToString("C0")</td>
                <td>
                    <a asp-controller="Flights" asp-action="Edit" asp-route-id="@item.FlightId" class="btn btn-sm btn-outline-secondary">Edit</a>
                    <a asp-controller="Flights" asp-action="Delete" asp-route-id="@item.FlightId" class="btn btn-sm btn-outline-danger">Delete</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
